<%= form_for([@user, @room]) do |f| %>
<% if @room.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@room.errors.count, "error") %> prohibited this room from being saved:</h2>

  <ul>
    <% @room.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>
<h4 class="subheader">Room Info</h4>
<hr>
<div class="row">
  <div class="small-5 medium-5 large-5 column">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
</div>
<br>
<!-- Parameters start -->
<div class="row">
  <!-- Summer start -->
  <div class="column small-12 medium-6 large-6">
    <div class="row">
      <h4 class="subheader">Summer Parameters</h4>
      <hr>
    </div>

    <div class="row">
      <h6 class="subheader column">Temperature (ºC)</h6>
    </div>
    <div class="row">
      <div class="small-3 medium-3 large-3 column">
        <label for="max_summer_temp">Max
          <%= f.number_field :max_summer_temp %>
        </label>
      </div>
      <div class="small-3 medium-3 large-3 column end">
        <label for="max_summer_temp">Min
          <%= f.number_field :min_summer_temp %>
        </label>
      </div>
    </div>
    <div class="row">
      <h6 class="subheader column">Humidity (%)</h6>
    </div>
    <div class="row">
      <div class="small-3 medium-3 large-3 column">
        <label for="max_summer_temp">Max
          <%= f.number_field :max_summer_temp %>
        </label>
      </div>
      <div class="small-3 medium-3 large-3 column end">
        <label class="small" for="max_summer_temp">Min
          <%= f.number_field :min_summer_temp %>
        </label>
      </div>
    </div>
  </div>
  <!-- Summer end -->
  <!-- Winter start -->
  <div class="column small-12 medium-6 large-6">
    <div class="row">
      <h4 class="subheader">Winter Parameters</h4>
      <hr>
    </div>
    <div class="row">
      <h6 class="subheader column">Temperature (ºC)</h6>
    </div>
    <div class="row">
      <div class="small-3 medium-4 large-3 column">
        <label for="max_summer_temp">Max
          <%= f.number_field :max_winter_temp %>
        </label>
      </div>
      <div class="small-3 medium-4 large-3 column end">
        <label for="max_summer_temp">Min
          <%= f.number_field :min_winter_temp %>
        </label>
      </div>
    </div>
    <div class="row">
      <h6 class="subheader column">Humidity (%)</h6>
    </div>
    <div class="row">
      <div class="small-3 medium-4 large-3 column">
        <label for="max_summer_temp">Max
          <%= f.number_field :max_winter_temp %>
        </label>
      </div>
      <div class="small-3 medium-4 large-3 column end">
        <label class="small" for="max_summer_temp">Min
          <%= f.number_field :min_winter_temp %>
        </label>
      </div>
    </div>
  </div>
  <!-- Winter end -->
</div>
<!-- Parameters end -->

<br>
<div class="row">
  <div class="small-6 medium-5 large-5 column end">
    <div class="actions">
      <%= f.submit class: "button" %>
    </div>
  </div>
</div>
<% end %>
